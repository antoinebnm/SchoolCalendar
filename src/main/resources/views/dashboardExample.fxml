<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.edt.controller.EtudiantController">

    <top>
        <HBox spacing="20.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Tableau de bord - Emploi du temps" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" onAction="#handleLogout" text="Se déconnecter" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <Label text="Cours de la semaine" />

            <TableView fx:id="coursTable" prefHeight="300.0">
                <columns>
                    <TableColumn fx:id="colMatiere" editable="false" prefWidth="150.0" text="Matière" />
                    <TableColumn fx:id="colJour" editable="false" prefWidth="100.0" text="Jour" />
                    <TableColumn fx:id="colHeure" editable="false" prefWidth="100.0" text="Heure" />
                    <TableColumn fx:id="colSalle" editable="false" prefWidth="100.0" sortable="false" text="Salle" />
                    <TableColumn fx:id="colEnseignant" editable="false" prefWidth="150.0" sortable="false" text="Enseignant" />
               <TableColumn fx:id="colDescription" editable="false" maxWidth="1.7976931348623157E308" prefWidth="150.0" sortable="false" text="Description" />
                </columns>
            </TableView>

            <TitledPane expanded="false" text="Détails du cours">
                <VBox spacing="5.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <Label fx:id="detailMatiere" text="Matière : " />
                    <Label fx:id="detailHoraire" text="Horaire : " />
                    <Label fx:id="detailSalle" text="Salle : " />
                    <Label fx:id="detailEnseignant" text="Enseignant : " />
                    <Label fx:id="detailDescription" text="Description : " wrapText="true" />
                </VBox>
            </TitledPane>
        </VBox>
    </center>

</BorderPane>
